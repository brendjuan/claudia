starts = [0,1,3]
fins   = [6,5,6]
times  = [10,12,6]
tempTimes = [10,12,6]

total = 0

aSch = [0,0,0,0,0,0,0]
bSch = [0,0,0,0,0,0,0]
cSch = [0,0,0,0,0,0,0]

for t in times:
    total = total+t
    
total = total / 7
division = 0
multiplicity = [0,0,0]
for i in range(0,7):
    
    division = 0
    for j in range(0,3):
        multiplicity[j] = 0
        
        if starts[j] <= i and fins[j] >= i:
            division = division + tempTimes[j]
            multiplicity[j] = tempTimes[j]
    multi = [0,0,0]
    
    multi = [total * t / division for t in multiplicity]
    aSch[i] = multi[0]
    bSch[i] = multi[1]
    cSch[i] = multi[2]
    for j in range(0,3):
        tempTimes[j] = tempTimes[j] - multi[j]


print ('DONE')
print (aSch)
print (bSch)
print (cSch)
print (tempTimes)
